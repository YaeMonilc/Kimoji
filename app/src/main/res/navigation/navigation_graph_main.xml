<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="moe.wisteria.android.ui.fragment.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_channelSelectorFragment"
            app:destination="@id/channelSelectorFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"/>
    </fragment>
    <fragment
        android:id="@+id/channelSelectorFragment"
        android:name="moe.wisteria.android.ui.fragment.channelSelector.ChannelSelectorFragment"
        android:label="ChannelSelectorFragment"
        tools:layout="@layout/fragment_channel_selector">
        <action
            android:id="@+id/action_channelSelectorFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/channelSelectorFragment"/>
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="moe.wisteria.android.ui.fragment.signIn.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_indexFragment"
            app:destination="@id/indexFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/signInFragment"/>
    </fragment>
    <fragment
        android:id="@+id/indexFragment"
        android:name="moe.wisteria.android.ui.fragment.index.IndexFragment"
        android:label="IndexFragment"
        tools:layout="@layout/fragment_index"/>
</navigation>