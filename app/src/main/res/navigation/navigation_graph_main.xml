<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="moe.wisteria.android.kimoji.ui.fragment.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_channelSelectorFragment"
            app:destination="@id/channelSelectorFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_splashFragment_to_indexFragment"
            app:destination="@id/indexFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/channelSelectorFragment"
        android:name="moe.wisteria.android.kimoji.ui.fragment.channelSelector.ChannelSelectorFragment"
        android:label="ChannelSelectorFragment"
        tools:layout="@layout/fragment_channel_selector">
        <argument
            android:name="navigatePosition"
            app:argType="moe.wisteria.android.kimoji.ui.fragment.channelSelector.ChannelSelectorFragment$NavigatePosition"
            android:defaultValue="SIGN_IN" />

        <action
            android:id="@+id/action_channelSelectorFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/channelSelectorFragment"
            app:enterAnim="@anim/anim_navigation_default_enter"
            app:exitAnim="@anim/anim_navigation_default_exit"
            app:popEnterAnim="@anim/anim_navigation_default_pop_enter"
            app:popExitAnim="@anim/anim_navigation_default_pop_exit"/>
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="moe.wisteria.android.kimoji.ui.fragment.signIn.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_indexFragment"
            app:destination="@id/indexFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/signInFragment"
            app:enterAnim="@anim/anim_navigation_default_enter"
            app:exitAnim="@anim/anim_navigation_default_exit"
            app:popEnterAnim="@anim/anim_navigation_default_pop_enter"
            app:popExitAnim="@anim/anim_navigation_default_pop_exit"/>
        <action
            android:id="@+id/action_signInFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/anim_navigation_default_enter"
            app:exitAnim="@anim/anim_navigation_default_exit"
            app:popEnterAnim="@anim/anim_navigation_default_pop_enter"
            app:popExitAnim="@anim/anim_navigation_default_pop_exit"/>
    </fragment>
    <fragment
        android:id="@+id/indexFragment"
        android:name="moe.wisteria.android.kimoji.ui.fragment.index.IndexFragment"
        android:label="IndexFragment"
        tools:layout="@layout/fragment_index">
        <action
            android:id="@+id/action_indexFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/anim_navigation_default_enter"
            app:exitAnim="@anim/anim_navigation_default_exit"
            app:popEnterAnim="@anim/anim_navigation_default_pop_enter"
            app:popExitAnim="@anim/anim_navigation_default_pop_exit"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="moe.wisteria.android.kimoji.ui.fragment.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="moe.wisteria.android.kimoji.ui.fragment.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>
</navigation>